<?xml version="1.0"?>
<odoo>
    <record id="state_property_action" model="ir.actions.act_window">
        <field name="name">State Property</field>
        <field name="res_model">state.property</field>
    </record>

    <record id="state_property_list" model="ir.ui.view">
        <field name="name">state.property.list</field>
        <field name="model">state.property</field>
        <field name="arch" type="xml">
            <list string="Channel">
                <field name="name"/>
                <field name="description"/>
                <field name="bedrooms"/>
                <field name="garden"/>
                <field name="garden_orientation"/>
                <field name="garage"/>
            </list>
        </field>
    </record>

    <record id="state_property_view_form" model="ir.ui.view">
        <field name="name">state.property.form</field>
        <field name="model">state.property</field>
        <field name="arch" type="xml">
            <form string="State Property">
                <sheet>
                    <widget name="web_ribbon" title="Archived" bg_color="bg_danger" invisible="active"/>
                    <div class="oe_title">
                        <div class="oe_edit_only">
                            <group>
                                <field name="name"/>
                                <field name="description"/>
                            </group>
                        </div>
                        <field name="active" invisible="1"/>
                    </div>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
